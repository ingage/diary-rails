<div class="uk-container uk-container-xsmall uk-position-relative">
  <div class="uk-card uk-card-default uk-card-body uk-margin-xlarge-top uk-margin-auto uk-width-medium">
    <%= form_with model: @form, url: login_path, method: :post, class: 'uk-form-stacked' do |f| %>
      <div class="uk-margin">
        <label class="uk-form-label uk-text-muted" for="username">メールアドレス</label>
        <div class="uk-form-controls">
          <%= f.text_field :username, class: ['uk-input'] %>
        </div>
      </div>
      <div class="uk-margin">
        <label class="uk-form-label uk-text-muted" for="password">パスワード</label>
        <div class="uk-form-controls">
          <%= f.password_field :password, class: 'uk-input' %>
        </div>
      </div>
      <div class="uk-margin uk-margin-large-top">
        <%= f.submit 'ログイン', class: 'uk-button uk-button-secondary uk-width-3-4 uk-align-center' %>
      </div>
    <% end %>
  </div>
</div>

<div id="errors" style="display: none;">
  <%= @form.errors.present? ? @form.errors.full_messages : '' %>
</div>
<%= javascript_bundle_tag 'login' %>
